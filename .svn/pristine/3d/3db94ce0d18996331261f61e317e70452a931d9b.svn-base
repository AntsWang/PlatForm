.title{
    height: 40px;
    display: flex;
    border-bottom: 1px solid #ccc;
    background: #efeff4;
}
.title div {
    display: flex;
    justify-content: center;
    align-items: center;
}
.row {
    height: 46px;
    display: flex;
    border-bottom: 1px solid #ccc;
    background: #fff;
}

.row div {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0 4px;
}

.time {
    flex:4;
    text-align: center;
}
.change{
    flex:2;
}
.win{
    flex:2;
}


.message {
    flex:4;
    flex-direction:column;
}

.container {
    min-height: 100%;
}

.timeContent{
    flex:3;
    text-align: center;
    flex-direction: column;
}